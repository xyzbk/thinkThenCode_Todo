<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <HorizontalScrollView
        android:id="@+id/daysBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:scrollbars="none"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnGetStarted"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/mon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:gravity="center"
                android:background="#EEEEEE"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                android:padding="8dp"
                android:text="Mon\n17" />

            <TextView
                android:id="@+id/tue"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:gravity="center"
                android:background="#EEEEEE"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                android:padding="8dp"
                android:text="Tue\n18" />

            <TextView
                android:id="@+id/wed"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:gravity="center"
                android:background="#EEEEEE"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                android:padding="8dp"
                android:text="Wed\n19" />

            <TextView
                android:id="@+id/thu"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:gravity="center"
                android:background="#EEEEEE"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                android:padding="8dp"
                android:text="Thu\n20" />

            <TextView
                android:id="@+id/fri"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:gravity="center"
                android:background="#EEEEEE"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                android:padding="8dp"
                android:text="Fri\n21" />

            <TextView
                android:id="@+id/sat"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:gravity="center"
                android:background="#EEEEEE"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                android:padding="8dp"
                android:text="Sat\n22" />

            <TextView
                android:id="@+id/sun"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:gravity="center"
                android:background="#EEEEEE"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                android:padding="8dp"
                android:text="Sun\n23" />


        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
